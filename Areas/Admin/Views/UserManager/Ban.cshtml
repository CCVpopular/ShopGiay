@model ShopGiay.Models.ApplicationUser

@{
    ViewData["Title"] = "Ban";
}

<h3>Bạn có chắc là muốn chặn người dùng này</h3>
<div>
    <form asp-action="Ban">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            <label for="selectedDate">Chọn ngày:</label>
        </dt>
        <dd class="form-group">
            <input type="date" id="selectedDate" name="selectedDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" required>
        </dd>
    </dl>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Ban" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
