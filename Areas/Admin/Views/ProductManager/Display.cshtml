@model ShopGiay.Models.Product

@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.PromotionId != null)
            {
                <span>
                    @string.Format("{0:N0}", Model.DiscountedPrice)đ
                </span>
                <span style="text-decoration: line-through; color: dimgray;">
                    @string.Format("{0:N0}", Model.Price)đ
                </span>
                <span style="color: red;">
                    @Model.Promotions.DiscountPercent%
                </span>
            }
            else
            {
                <span>@string.Format("{0:N0}", Model.Price)đ</span>
            }
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductColor.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductColor.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" width="200px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
