@model ShoppingCart
<h2>Your Cart</h2>
<table class="table">
	<tr>
		<th>Product</th>
		<th>Name</th>
		<th>Quantity</th>
		<th>Price</th>
		<th>Total</th>
	</tr>
	@foreach (var item in Model.Items)
	{
		<tr>
			<td><img src="@item.Image" width="50px" /></td>
			<td>@item.Name</td>
			<td>
				<form asp-controller="ShoppingCart" asp-action="UpdateQuantity" method="post">
					<input type="hidden" name="productId" value="@item.ProductId" />
					<label for="Quantity"> So luong </label>
					<input type="number" id="Quantity" name="Quantity" value="@item.Quantity" min="1" onchange="this.form.submit()" />
				</form>
			</td>
			<td>@item.Price</td>
			<td>@(item.Price * item.Quantity)</td>
			<td>
				<a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
			</td>
		</tr>
	}
</table>

<a asp-action="Checkout" class="btn btn-info"> Dat Hang </a>