
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Order
<h2>Checkout</h2>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input type="tel" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" class="form-control" pattern="[0-9]{10,12}" title="Please enter a valid phone numbe" required />
    </div>
    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address</label>
        <input type="text" id="ShippingAddress" name="ShippingAddress" asp-for="ShippingAddress" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <h5>payment options</h5>
    <p>PAY ON DELIVERY</p>
    <button type="submit" class="btn btn-primary">Place Order</button>
</form>




