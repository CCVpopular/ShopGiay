
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@model Order
<div class="container">
    <h2>Checkout</h2>
    <form asp-action="Checkout" method="post">
        <div class="form-group">
            <label asp-for="PhoneNumber">Số điện thoại</label>
            <input type="tel" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber" class="form-control" pattern="[0-9]{10,12}" title="Please enter a valid phone numbe" required />
        </div>
        <div class="form-group">
            <label asp-for="ShippingAddress">Địa chỉ giao hàng</label>
            <input type="text" id="ShippingAddress" name="ShippingAddress" asp-for="ShippingAddress" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Notes">Ghi chú</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>
        <h5>Chọn Phương Thức Thanh Toán</h5>
        @*     <button type="submit" class="btn btn-primary">Place Order</button> *@
        <input type="submit" name="payment" class="btn btn-primary" value="Thanh Toán Khi Đặt hàng (COD)"></input>
        <input type="submit" name="payment" class="btn btn-primary" value="Thanh toán VnPay"></input>
    </form>
</div>

