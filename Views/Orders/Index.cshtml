@model IEnumerable<ShopGiay.Models.Order>

@{
    ViewData["Title"] = "Order List";
}
<div class="container">
    <table class="order-table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Shipping Address</th>
                <th>Total</th>
                <th>Shipped</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.User.FullName</td>
                    <td>@order.ShippingAddress</td>
                    <td>@String.Format("{0:N0}", order.Total)đ</td>
                    <td>@(order.IsShipped ? "Đã Giao" : "Chưa Giao")</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.Notes</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@order.Id">Chi Tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Trở Về Trang Chủ</a>
</div>

<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
    }

    /* Style for the order table */
    .order-table {
        width: 100%;
        border-collapse: collapse;
    }

        .order-table th,
        .order-table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        .order-table th {
            background-color: #f2f2f2;
        }

        .order-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .order-table tbody tr:hover {
            background-color: #e0e0e0;
        }

    /* Style for buttons */
    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        cursor: pointer;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
    }

    .btn:hover {
        background-color: #0056b3;
        color: #fff;
    }

</style>
