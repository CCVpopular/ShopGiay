@model ShopGiay.Models.Product

@{
    ViewData["Title"] = "Display";
}

<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="@Html.DisplayFor(model => model.ImageUrl)" class="card-img-top" alt="Product Image">
            </div>
        </div>
        <div class="col-md-6">
            <h1>Chi Tiết Sản Phẩm</h1>
            <table class="table">
                <tr>
                    <th>Tên Sản Phẩm:</th>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>Đơn Giá:</th>
                    <td>@string.Format("{0:N0}", Model.Price)đ</td>
                </tr>
                <tr>
                    <th>Mô Tả:</th>
                    <td>@Html.DisplayFor(model => model.Description)</td>
                </tr>
                <tr>
                    <th>Loại:</th>
                    <td>@Html.DisplayFor(model => model.Category.Name)</td>
                </tr>
            </table>
            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="form-group">
                    <label for="quantity">Số Lượng:</label>
                    <p></p>
                    <input type="number" id="quantity" name="quantity" class="form-control quantity-input-sm" value="1" min="1">
                </div>
                <p></p>
                <button class="btn btn-primary" type="submit" name="action" value="addToCart">Thêm Vào Giỏ Hàng</button>
                <button class="btn btn-success" type="submit" name="action" value="buyNow">Mua Ngay</button>
            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-secondary">Trở Về</a>
        </div>
    </div>
</div>

<style>
    .quantity-input-sm {
        width: 200px;
    }

    th {
        width: 30%;
    }
</style>
